<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.TestDao">

    <resultMap type="com.example.demo.entity.Test" id="TestMap">
        <result property="testId" column="test_id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TestMap">
        select
          test_id, title
        from Test
        where test_id = #{testId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TestMap">
        select
          test_id, title
        from Test
        <where>
            <if test="testId != null">
                and test_id = #{testId}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from Test
        <where>
            <if test="testId != null">
                and test_id = #{testId}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="testId" useGeneratedKeys="true">
        insert into Test(title)
        values (#{title})
    </insert>

    <insert id="insertBatch" keyProperty="testId" useGeneratedKeys="true">
        insert into Test(title)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.title})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="testId" useGeneratedKeys="true">
        insert into Test(title)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.title})
        </foreach>
        on duplicate key update
        title = values(title)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update Test
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
        </set>
        where test_id = #{testId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from Test where test_id = #{testId}
    </delete>

</mapper>

