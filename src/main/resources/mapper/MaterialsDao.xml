<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.MaterialsDao">

    <resultMap type="com.example.demo.entity.Materials" id="MaterialsMap">
        <result property="materialsId" column="materials_id" jdbcType="INTEGER"/>
        <result property="filePath" column="file_path" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="MaterialsMap">
        select
          materials_id, file_path
        from Materials
        where materials_id = #{materialsId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="MaterialsMap">
        select
          materials_id, file_path
        from Materials
        <where>
            <if test="materialsId != null">
                and materials_id = #{materialsId}
            </if>
            <if test="filePath != null and filePath != ''">
                and file_path = #{filePath}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from Materials
        <where>
            <if test="materialsId != null">
                and materials_id = #{materialsId}
            </if>
            <if test="filePath != null and filePath != ''">
                and file_path = #{filePath}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="materialsId" useGeneratedKeys="true">
        insert into Materials(file_path)
        values (#{filePath})
    </insert>

    <insert id="insertBatch" keyProperty="materialsId" useGeneratedKeys="true">
        insert into Materials(file_path)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.filePath})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="materialsId" useGeneratedKeys="true">
        insert into Materials(file_path)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.filePath})
        </foreach>
        on duplicate key update
        file_path = values(file_path)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update Materials
        <set>
            <if test="filePath != null and filePath != ''">
                file_path = #{filePath},
            </if>
        </set>
        where materials_id = #{materialsId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from Materials where materials_id = #{materialsId}
    </delete>

</mapper>

