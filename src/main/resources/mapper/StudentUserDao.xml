<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.StudentUserDao">

    <resultMap type="com.example.demo.entity.StudentUser" id="StudentUserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
    </resultMap>

    <!--query by id-->
    <select id="queryById" resultMap="StudentUserMap">
        select
          id, username, password, email
        from test.student_user
        where id = #{id}
    </select>

    <!--insert-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into test.student_user(username, password, email)
        values (#{username}, #{password}, #{email})
    </insert>

    <!--query all-->
    <select id="queryAllByLimit" resultMap="StudentUserMap">
        select
          id, username, password, email
        from test.student_user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="email != null and email != ''">
                and email = #{email}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--query by username-->
    <select id="queryByUsername" resultType="java.lang.String">
        select username
        from test.student_user
        where username = #{username}
    </select>

    <!--query by email-->
    <select id="queryByEmail" resultType="java.lang.String">
        select email
        from test.student_user
        where email = #{email}
    </select>

    <!--find bu username-->
    <select id="findByUsername" resultType="com.example.demo.entity.StudentUser">
        select
          id, username, password, email
        from test.student_user
        where username = #{username}
    </select>

    <!--find by email-->
    <select id="findByEmail" resultType="com.example.demo.entity.StudentUser">
        select
          id, username, password, email
        from test.student_user
        where email = #{email}
    </select>

    <!--update-->
    <update id="update">
        update student_user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--delete-->
    <delete id="deleteById">
        delete from student_user where id = #{id}
    </delete>

</mapper>

